<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EE536DFE"
        android:fontFamily="@font/merriweather_bold"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/title"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonDBS"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:alpha="1"
            android:backgroundTint="#60536DFE"
            android:fontFamily="@font/merriweather_bold"
            android:text="@string/bank1"
            android:textSize="60sp"
            app:cornerRadius="25dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/buttonOCBC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:backgroundTint="#60536DFE"
            android:fontFamily="@font/merriweather_bold"
            android:text="@string/bank2"
            android:textSize="60sp"
            app:cornerRadius="25dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <Button
            android:id="@+id/buttonUOB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:backgroundTint="#60536DFE"
            android:fontFamily="@font/merriweather_bold"
            android:text="@string/bank3"
            android:textSize="60sp"
            app:cornerRadius="25dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6" />
    </LinearLayout>

</LinearLayout>